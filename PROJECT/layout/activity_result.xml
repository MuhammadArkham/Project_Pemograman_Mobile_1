<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:padding="24dp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/abc_ic_ab_back_material"
        app:tint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Result"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMI Score"
                android:textColor="#9E9E9E"
                android:textSize="14sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"/>

            <TextView
                android:id="@+id/tvBmiValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22.5"
                android:textColor="@color/black"
                android:textSize="72sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginTop="8dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardStatusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#E8F5E9"
                app:cardElevation="0dp"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/tvBmiStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Normal"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="6dp"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:orientation="horizontal"
                android:layout_marginTop="32dp"
                android:weightSum="3">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#4DD0E1"
                    android:layout_marginEnd="2dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#66BB6A"
                    android:layout_marginEnd="2dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#EF5350"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/imgIndicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_pin_location"
                app:tint="@color/black"
                android:rotation="180"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/tvBmiDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Great job! Your weight is ideal. Keep it up."
                android:textColor="#757575"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_marginTop="24dp"
                android:lineSpacingExtra="4dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFinish"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Done"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@drawable/bg_button_primary"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/btnRecalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate Again"
            android:textColor="#757575"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>